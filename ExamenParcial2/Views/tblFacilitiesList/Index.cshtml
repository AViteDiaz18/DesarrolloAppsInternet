@model IEnumerable<ExamenParcial2.Models.tblFacilitiesList>

@{
    ViewData["Title"] = "Servicios";
}

<h1>Servicios</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.strFacilityDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.strFacilityDesc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IngFacilityID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IngFacilityID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IngFacilityID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
