@model IEnumerable<ExamenParcial3.Models.VehicleModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Models</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by model or manufacter: 
            <input type="text" name="SearchString" />
            <input type="submit" value="Search" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ManufacterID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleManufacter.ManufacterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ModelID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ModelID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ModelID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
