@model IEnumerable<ExamenParcial3.Models.VehicleDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Details</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by model or manufacter: 
            <input type="text" name="SearchString" />
            <input type="submit" value="Search" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarRegistration)
            </th>
            <th>
                Fabricante
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufactureYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColourID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuelTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentMilage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehiclePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarRegistration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel.VehicleManufacter.ManufacterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufactureYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleColour.ColourName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleFuelType.FuelTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentMilage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehiclePrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarRegistration">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CarRegistration">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CarRegistration">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
